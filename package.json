{
  "name": "CodePod",
  "displayName": "CodePod",
  "description": "Generate podcast scripts from your code using Gemini.",
  "version": "0.1.2",
  "publisher": "AnkyKongStudios",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ankykong/codepod.git"
  },
  "activationEvents": [
    "onCommand:codepod.generatePodcast"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codepod.generatePodcast",
        "title": "CodePod: Generate Podcast Script"
      }
    ],
    "configuration": {
      "title": "CodePod",
      "properties": {
        "codepod.apiKey": {
          "type": "string",
          "description": "Your Gemini API key."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0"
  }
}
