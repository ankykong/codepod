{
  "name": "codepod",
  "displayName": "Code Podcast Generator",
  "description": "Send your entire file to Gemini AI and get a podcast episode generated for you.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ankykong/codepod.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codepod.sendFile",
        "title": "Send File to Gemini"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codepod.sendFile",
          "group": "geminiGroup"
        }
      ]
    },
    "configuration": {
      "title": "CodePod",
      "properties": {
        "codepod.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Gemini"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
